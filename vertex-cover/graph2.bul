% Naive vertex-cover encoding

% Represent vertex domain and connected edges
vertex[1..5].
edge[1, 2]. edge[3, 4]. edge[4, 5]. edge[1, 2]. 
edge[2, 3]. 

% Rules for covering edges
edge[U, V] :: s(U), s(V).

% Rules for budget constraints (budget = 4)
vertex[V1], vertex[V2], vertex[V3], vertex[V4], vertex[V5], 
    V1 < V2, V2 < V3, V3 < V4, V4 < V5 ::
    ~s(V1), ~s(V2), ~s(V3), ~s(V4), ~s(V5).
